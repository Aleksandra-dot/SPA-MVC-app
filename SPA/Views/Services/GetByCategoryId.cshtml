@*Define model*@
@model IEnumerable<Service>

@*Define ViewData@**@
@{
    ViewData["Title"] = "List of services";
}

@*Wrtie code*@

<h1>Services</h1>

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th> @Html.DisplayNameFor(model => model.ProfilePictureUrl)</th>
                    <th> @Html.DisplayNameFor(model => model.Name)</th>
                    <th> @Html.DisplayNameFor(model => model.Price)</th>
                    <th> @Html.DisplayNameFor(model => model.Duration)</th>
                    <th>Details</th>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <th>Actions</th>
                    }
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>                     
                        <td class="align-middle">
                            <img class="rounded-circle" src = "@item.ProfilePictureUrl" style="max-width:150px;"/>
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Duration)
                        </td>
                        <td>
                            <a class="btn btn-outline-info" asp-controller="Services" asp-action="Details" asp-route-id="@item.Id">
                                <i class="bi bi-eye"></i>
                                Details
                            </a>
                        </td>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-controller="Services" asp-action="Edit" asp-route-id="@item.Id">
                                <i class="bi bi-pencil-square"></i>
                                Edit
                            </a>
                            
                            <a class="btn btn-danger text-white">
                                <i class="bi bi-trash"></i>
                                Delete
                            </a>
                        </td>
                            
                        }

                     
                    </tr>
                }
                
            </tbody>
            <tr>
                <td></td>
            </tr>
        </table>
    </div>

</div>

