@model Service

@{
    ViewData["Title"] = "Service details";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="card mb-12">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info text-center">
                        <p class="card-text">
                            <h5 class="card-title">
                                @Model.Name
                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <img src="@Model.ProfilePictureUrl" width="100%" alt="@Model.Name">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <p class="card-text">@Model.Description</p>
                        
                        <p class="card-text"><b>Price: </b>@Model.Price</p>
                        <p class="card-text"><b>Duration: </b>@Model.Duration.</p>
                       </div>
                <div class="col-md-12">
                    <div class="card-footer">
                        <p class="card-text">
                            <a class="btn btn-outline-primary float-right" asp-action="Index">
                                See all services
                            </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>